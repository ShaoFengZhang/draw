.cardBody {
    width: 702rpx;
    height: 1002rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 0px 20rpx 0px rgba(168, 168, 168, 0.2);
    border-radius: 8rpx;
    margin: 20rpx auto 0;
    overflow: hidden;
}

.cardTitle {
    width: 608rpx;
    height: 100rpx;
    font-size: 30rpx;
    color: rgba(51, 51, 51, 1);
    margin: 40rpx auto 0;
    line-height: 50rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.cardTitleTxt {
    color: #ffc16f;
    font-size: 40rpx;
    margin-right: 30rpx;
}

.cardPlate {
    width: 622rpx;
    height: 762rpx;
    border: 18rpx solid rgba(255, 188, 23, 0.2);
    border-radius: 32rpx;
    margin: 14rpx auto 0;
    box-sizing: border-box;
    position: relative;
}

#getInfo {
    width: 622rpx;
    height: 762rpx;
    position: absolute;
    top: -18rpx;
    left: -18rpx;
    padding: 0;
    margin: 0;
    opacity: 0;
}

.cardPlateImg {
    width: 590rpx;
    height: 730rpx;
    margin: 0rpx auto 0;
    background-color: rgba(255, 188, 23, 0.8);
    border-radius: 10rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.cardPlateImg image {
    width: 586rpx;
    height: 726rpx;
}

.cardPlateBigQuan {
    width: 262rpx;
    height: 262rpx;
    background: rgba(255, 255, 255, 1);
    border: 8rpx solid rgba(255, 214, 160, 1);
    border-radius: 50%;
    position: absolute;
    top: 218rpx;
    left: 162rpx;
}

.cardPlateSmallQuan {
    width: 232rpx;
    height: 232rpx;
    border: 4rpx dashed rgba(255, 193, 111, 0.3);
    border-radius: 50%;
    margin: 14rpx auto 0;
    font-size: 70rpx;
    color: #ffb554;
    font-weight: bold;
    text-align: center;
    line-height: 232rpx;
}

.ViewResults {
    color: #ffb554;
    font-size: 26rpx;
    text-align: center;
    margin-top: 26rpx;
}

.botBtn {
    width: 100%;
    height: 88rpx;
    box-sizing: border-box;
    padding: 0 24rpx;
    display: flex;
    justify-content: space-between;
    margin-top: 50rpx;
}

.moreActive, .shareActive {
    width: 338rpx;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    font-size: 30rpx;
}

.moreActive {
    border: 2rpx solid rgba(255, 193, 111, 1);
    border-radius: 44rpx;
    color: #ffb554;
}

.moreActive image {
    width: 26rpx;
    height: 30rpx;
    vertical-align: middle;
    margin-right: 6rpx;
}

.shareActive {
    width: 338rpx;
    height: 88rpx;
    background: rgba(255, 181, 84, 1);
    box-shadow: 0px 2rpx 20rpx 0px rgba(255, 181, 84, 0.68);
    border-radius: 44rpx;
    color: #fff;
    position: relative;
}

.shareActive image {
    width: 32rpx;
    height: 28rpx;
    vertical-align: middle;
    margin-right: 6rpx;
}

#shareBtn {
    width: 100%;
    height: 118rpx;
    padding: 0;
    margin: 0;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
}

/* 海报弹窗 */

.postersMask {
    width: 100%;
    height: 100vh;
    background: rgba(51, 51, 51, 0.6);
    position: absolute;
    top: 0;
    left: 0;
}

.posterBody {
    width: 750rpx;
    height: 344rpx;
    background: rgba(255, 255, 255, 1);
    position: absolute;
    bottom: 0;
    left: 0;
	font-size: 30rpx;
}

.posterBody image{
	width: 38rpx;
	height: 38rpx;
	vertical-align: middle;
	margin-right: 20rpx;
}

.invitFriend, .invitPic {
    width: 100%;
    height: 118rpx;
    box-sizing: border-box;
	text-align: center;
	line-height: 118rpx;
	color: #333333;
	position: relative;
}

.invitFriend {
    border-bottom: 2rpx solid #e8e8e8;
}

.invitLine {
    width: 750rpx;
    height: 20rpx;
    background: rgba(243, 243, 243, 1);
}

.invitCancel{
	width: 100%;
	height: 88rpx;
	color: #9D9D9D;
	line-height: 88rpx;
	text-align: center;
}

/* 动效 */

.Ani {
    animation: Ani 2s ease 1;
}

@keyframes Ani {
    0% {
        transform: rotateY(0deg);
    }

    50% {
        transform: rotateY(360deg);
    }

    100% {
        transform: rotateY(0deg);
    }
}
