.cardBody {
    width: 702rpx;
    height: 1160rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 0px 20rpx 0px rgba(168, 168, 168, 0.2);
    border-radius: 8rpx;
    background: rgba(255, 255, 255, 1);
    margin: 20rpx auto 0;
    overflow: hidden;
}

.cardTitle {
    width: 608rpx;
    height: 100rpx;
    font-size: 30rpx;
    color: rgba(51, 51, 51, 1);
    margin: 40rpx auto 0;
    line-height: 50rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.cardTitleTxt {
    color: #ffc16f;
    font-size: 40rpx;
    margin-right: 30rpx;
}

.cardPlate {
    width: 622rpx;
    height: 840rpx;
    border-radius: 32rpx;
    margin: 14rpx auto 0;
    box-sizing: border-box;
    position: relative;
}

.cardPlateImg {
    width: 622rpx;
    height: 840rpx;
    margin: 0rpx auto 0;
    background-color: rgba(255, 188, 23, 0.8);
    border-radius: 32rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.cardPlateImg image {
    width: 622rpx;
    height: 840rpx;
    border-radius: 32rpx;
}

.playerList {
    width: 574rpx;
    height: 792rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 21rpx;
    position: absolute;
    left: 24rpx;
    top: 24rpx;
    overflow: hidden;
}

.listIcon, .listIcon image {
    width: 538rpx;
    height: 110rpx;
}

.listIcon {
    margin: 22rpx auto 0;
}

.listDesTxt {
    text-align: center;
    color: #333;
    font-size: 26rpx;
    margin-top: 4rpx;
}

.listScrollBox {
    width: 536rpx;
    height: 570rpx;
    background-image: url("https://tp.datikeji.com/a/15457113211481/pQm5Rcwr1dbXayzKPBRe0K8eLlZTZhvzYWYYQL1L.png");
    margin: 24rpx auto 0;
    padding: 40rpx 62rpx 0;
}

.playerItem {
    width: 100%;
    height: 122rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.playerIcon, .playerIcon image {
    width: 78rpx;
    height: 78rpx;
    border-radius: 50%;
}

.playerIcon {
    margin-right: 18rpx;
}

.playerInfo {
    width: 240rpx;
    height: 78rpx;
    text-align: left;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 4rpx 0 10rpx;
}

.playerName {
    height: 36rpx;
    font-size: 24rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.playDate {
    font-size: 22rpx;
    color: #9d9d9d;
}

.ifSelect {
    width: 70rpx;
    height: 78rpx;
    font-size: 22rpx;
    text-align: center;
}

.ifSelect image {
    width: 54rpx;
    height: 36rpx;
}

.itemLine {
    width: 314rpx;
    height: 2rpx;
    background: rgba(232, 232, 232, 1);
    margin-left: 96rpx;
}

.botBtn {
    width: 100%;
    height: 88rpx;
    box-sizing: border-box;
    padding: 0 24rpx;
    display: flex;
    justify-content: space-between;
    margin-top: 50rpx;
}

.moreActive, .shareActive {
    width: 298rpx;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    font-size: 30rpx;
}

.moreActive {
    border: 2rpx solid rgba(255, 193, 111, 1);
    border-radius: 44rpx;
    color: #ffb554;
}

.moreActive image {
    width: 26rpx;
    height: 30rpx;
    vertical-align: middle;
    margin-right: 6rpx;
}

.shareActive {
    width: 338rpx;
    height: 88rpx;
    background: rgba(255, 181, 84, 1);
    box-shadow: 0px 2rpx 20rpx 0px rgba(255, 181, 84, 0.68);
    border-radius: 44rpx;
    color: #fff;
    position: relative;
}

.shareActive image {
    width: 32rpx;
    height: 28rpx;
    vertical-align: middle;
    margin-right: 6rpx;
}

#shareBtn {
    width: 338rpx;
    height: 88rpx;
    padding: 0;
    margin: 0;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
}

/* 底部提示文字 */

.botPrompt {
    color: #9d9d9d;
    font-size: 22rpx;
    margin-top: 24rpx;
    padding-bottom: 30rpx;
}
