/* 顶部个人信息 */

.topUserInfo {
    width: 100%;
    height: 150rpx;
    display: flex;
    padding: 0 24rpx;
}

.headPortrait {
    width: 150rpx;
    height: 150rpx;
    background: rgba(157, 157, 157, 1);
    border: 4rpx solid rgba(255, 255, 255, 1);
    box-shadow: 0px 2rpx 4rpx 0px rgba(114, 65, 0, 0.22);
    border-radius: 50%;
    margin-right: 30rpx;
}

.userName {
    width: 450rpx;
    height: 150rpx;
    line-height: 150rpx;
    font-size: 44rpx;
    color: #333;
    font-weight: bold;
}

.qrBox {
    line-height: 150rpx;
    float: right;
}

#getInfo {
    width: 80rpx;
    height: 150rpx;
    position: absolute;
    top: 0;
    right: 24rpx;
    padding: 0;
    margin: 0;
    opacity: 0;
}

.qrBox image:first-child {
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
    margin-right: 30rpx;
}

.qrBox image:last-child {
    width: 10rpx;
    height: 18rpx;
}

/* aboutMe 两个按钮*/

.aboutMe {
    width: 100%;
    height: 102rpx;
    padding: 0 24rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 30rpx;
}

.aboutMe view {
    width: 324rpx;
    height: 90rpx;
    border-radius: 10rpx;
    line-height: 90rpx;
    font-size: 30rpx;
}

.aboutMe text {
    vertical-align: middle;
}

.selectMyLaunche {
    background: rgba(255, 193, 111, 1);
    box-shadow: 0px 4rpx 16rpx 0px rgba(255, 193, 111, 0.6);
    color: #fff;
}

.selectMyJoin {
    background: rgba(244, 238, 230, 1);
    color: #cebfaa;
}

/* activityList */

.scrollViewItemBox {
    position: relative;
}

.scrollView {
    margin-top: 12rpx;
}

.activityItem {
    width: 100%;
    height: 220rpx;
    padding-left: 64rpx;
    display: flex;
    justify-content: start;
    align-items: center;
}

.activityItem .ItemIcon, .activityItem .ItemDes {
    height: 160rpx;
}

.ItemIcon {
    width: 160rpx;
    border-radius: 8rpx;
    margin-right: 40rpx;
    position: relative;
}

.ItemIcon text {
    display: inline-block;
    width: 84rpx;
    height: 28rpx;
    border-radius: 8rpx 14rpx 14rpx 0;
    position: absolute;
    top: 0;
    left: 0;
    background: rgba(255, 156, 0, 1);
    text-align: center;
    font-size: 20rpx;
    color: #fff;
    line-height: 28rpx;
}

.delete {
    width: 150rpx;
    height: 220rpx;
    background: rgba(51, 51, 51, 1);
    writing-mode: tb-rl;
    color: #fff;
    text-align: center;
    position: absolute;
    top: 0;
    right: 0;
    line-height: 150rpx;
    letter-spacing: 30rpx;
    box-sizing: border-box;
    padding-top: 30rpx;
    font-size: 32rpx;
}

.ItemDes {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.itemDesTitle {
    width: 380rpx;
    height: 60rpx;
    margin-top: 6rpx;
	/* 单行文本...效果 */
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.itemDesTitle text {
    vertical-align: middle;
}

.itemDesTitle text:last-child {
    height: 60rpx;
}

.itemDesTitle text:first-child {
    display: inline-block;
    height: 32rpx;
    background: rgba(255, 193, 111, 1);
    border-radius: 4rpx;
    line-height: 30rpx;
    text-align: center;
    margin-right: 10rpx;
    padding: 0 6rpx;
}

.itemDesuserInof {
    height: 48rpx;
    margin-bottom: 20rpx;
    padding: 0;
}

.playerIcon {
    display: inline-block;
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    margin-right: 18rpx;
}

.playerIcon image {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    vertical-align: middle;
}

.clockView {
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
    margin-right: 6rpx;
    box-sizing: border-box;
    position: relative;
    background-image: url('https://tp.datikeji.com/a/15456378465501/tCDn5QkOPePfITwbvw0MQbQfUFKrMDzbPbfFgP4O.png');
    top: 2rpx;
}

.playUserName {
    display: inline-block;
    width: 158rpx;
    line-height: 48rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.playDate {
    color: #9d9d9d;
    font-size: 24rpx;
}

.line {
    width: 622rpx;
    height: 2rpx;
    background: rgba(232, 232, 232, 1);
    margin: 0 auto;
}

/* 底部提示文字 */

.botPrompt {
    color: #9d9d9d;
    font-size: 22rpx;
    margin-top: 24rpx;
    padding-bottom: 30rpx;
}

/* 删除梦层 */

.postersMask {
    width: 100%;
    height: 100vh;
    background: rgba(51, 51, 51, 0.6);
    position: absolute;
    top: 0;
    left: 0;
}

.posterBody {
    width: 750rpx;
    height: 344rpx;
    background: rgba(255, 255, 255, 1);
    position: absolute;
    bottom: 0;
    left: 0;
    font-size: 30rpx;
}

.posterBody image {
    width: 38rpx;
    height: 38rpx;
    vertical-align: middle;
    margin-right: 20rpx;
}

.invitFriend, .invitPic {
    width: 100%;
    height: 118rpx;
    box-sizing: border-box;
    text-align: center;
    line-height: 118rpx;
    color: #333;
}

.invitFriend {
    border-bottom: 2rpx solid #e8e8e8;
}

.invitLine {
    width: 750rpx;
    height: 20rpx;
    background: rgba(243, 243, 243, 1);
}

.invitCancel {
    width: 100%;
    height: 88rpx;
    color: #9d9d9d;
    line-height: 88rpx;
    text-align: center;
}

.invitFriendShare {
    width: 100%;
    height: 118rpx;
    box-sizing: border-box;
    text-align: center;
    line-height: 118rpx;
    color: #333;
    background-color: #fff;
    border-bottom: 2rpx solid #e8e8e8;
    font-size: 30rpx;
    position: absolute;
    left: 0;
}

.invitFriendShare image {
    width: 38rpx;
    height: 38rpx;
    vertical-align: middle;
    margin-right: 20rpx;
}

#shareBtn {
    width: 100%;
    height: 118rpx;
    padding: 0;
    margin: 0;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
}
