/* 顶部图片 */

.topImgBox {
    margin: 0 auto;
}

.topImgBox image, .topImgBox {
    width: 702rpx;
    height: 350rpx;
    border-radius: 8rpx;
}

/* 文字描述 */

.textDes {
    width: 690rpx;
    height: 82rpx;
    margin: 0 auto;
    line-height: 40rpx;
    margin-top: 32rpx;
}

.textDes text:first-child {
    display: inline-block;
    width: 60rpx;
    height: 32rpx;
    background: rgba(255, 193, 111, 1);
    border-radius: 4rpx;
    line-height: 32rpx;
    margin-right: 20rpx;
}

/* 发起抽签按钮 */

.drawBtnBox {
    width: 750rpx;
    height: 98rpx;
    background: rgba(255, 181, 84, 1);
    position: fixed;
    bottom: 0;
    left: 0;
    font-size: 30rpx;
    line-height: 98rpx;
    text-align: center;
    color: #fff;
}

#getInfo {
    width: 750rpx;
    height: 98rpx;
    position: absolute;
    left: 0;
    top: 0;
    opacity: 0;
}

/* 任务列表 */

.taskList {
    width: 100%;
    box-sizing: border-box;
    padding: 0 24rpx;
    margin-top: 10rpx;
}

.taskTheme {
    width: 702rpx;
    height: 108rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 0px 20rpx 0px rgba(168, 168, 168, 0.2);
    border-radius: 8rpx;
    margin: 28rpx auto 0;
    box-sizing: border-box;
    padding: 0 40rpx;
    display: flex;
    align-items: center;
}

.taskThemeTxt {
    color: #d0d0d0;
    font-size: 30rpx;
    line-height: 108rpx;
    margin-right: 88rpx;
}

.themeInput {
    width: 410rpx;
    height: 100%;
    color: #333;
    font-size: 30rpx;
}

.placeClass {
    color: #d0d0d0;
}

/* 任务选项 */

.taskItemBox {
    width: 702rpx;
    height: 224rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 0px 20rpx 0px rgba(168, 168, 168, 0.2);
    border-radius: 8rpx;
    margin: 30rpx auto 0;
    box-sizing: border-box;
    padding: 0 40rpx;
}

.ItemTop {
    width: 100%;
    height: 118rpx;
    display: flex;
    align-items: center;
    line-height: 118rpx;
}

.ItemBot {
    width: 100%;
    height: 104rpx;
	box-sizing: border-box;
	padding-left: 58rpx;
	display: flex;
	align-items: center;
}

.ItemBot image{
	width: 44rpx;
	height: 44rpx;
}

.line {
    width: 564rpx;
    height: 2rpx;
    background: rgba(232, 232, 232, 1);
    margin: 0 0 0 58rpx;
}

.ItemTop image{
	width: 38rpx;
	height: 38rpx;
	margin-right: 20rpx;
}

.iconView{
	width: 88rpx;
	height: 104rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.itemInput{
	width: 210rpx;
	height: 104rpx;
	text-align: center;
	font-size: 30rpx;
}

/* 添加选项条目 */

.additemBox {
    width: 702rpx;
    height: 108rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 0px 20rpx 0px rgba(168, 168, 168, 0.2);
    border-radius: 8rpx;
    margin: 30rpx auto 40rpx;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding: 0 40rpx;
}

.additemBox image {
    width: 38rpx;
    height: 38rpx;
    margin-right: 20rpx;
}
